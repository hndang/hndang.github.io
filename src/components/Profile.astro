    </FloatingText>

    <FloatingText option="justify-end">
        <p class="floatText mt-[20vh] tracking-wide text-anti_atomic_8 dark:text-atomic_8">
            Unity - Gaming
        </p>
    </FloatingText>
    <FloatingText option="justify-end">
        <a
            class="floatTextMoveR mt-[10vh] max-w-md p-3 bg-anti_atomic_3 dark:bg-atomic_3 rounded-lg shadow mb-[20vh]"
        >
            <Icon
                name="simple-icons:unity"
                class="pb-3 size-20 md:size-24 2xl:size-28 text-gray-50 dark:text-gray-800"
            />
